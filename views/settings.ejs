<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Settings - MyTutor</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <link rel="stylesheet" href="./stylesheets/settings.css" />
    <link rel="icon" href="./images/icon.png" />
  </head>
  <body>
    <!-- partial:index.partial.html -->
    <body>
      <main>
        <nav class="main-menu">
          <img class="card-img" src="./images/mytutor.png" alt="MyTutor" />
          <ul>
            <li class="nav-item">
              <b></b>
              <b></b>
              <a href="/">
                <i class="fa fa-house nav-icon"></i>
                <span class="nav-text">Home</span>
              </a>
            </li>

            <li class="nav-item">
              <b></b>
              <b></b>
              <a href="/favorites">
                <i class="fa fa-star nav-icon"></i>
                <span class="nav-text">Favorites</span>
              </a>
            </li>

            <li class="nav-item">
              <b></b>
              <b></b>
              <a href="/tutors">
                <i class="fa fa-book nav-icon"></i>
                <span class="nav-text">Tutors</span>
              </a>
            </li>

            <li class="nav-item">
              <b></b>
              <b></b>
              <a href="/schedule">
                <i class="fa fa-calendar-check nav-icon"></i>
                <span class="nav-text">Calendar</span>
              </a>
            </li>

            <li class="nav-item active">
              <b></b>
              <b></b>
              <a href="/settings">
                <i class="fa fa-sliders nav-icon"></i>
                <span class="nav-text">Settings</span>
              </a>
            </li>
          </ul>
          <div class="logout">
            <nav class="nav nav-masthead justify-content-center float-md-end">
              <form action="/logout?_method=DELETE" method="POST">
                <button
                  class="nav-link fw-bold py-1 px-0 btn p=3 btn-dark text-white"
                  type="submit"
                >
                  Logout
                </button>
              </form>
            </nav>
          </div>
        </nav>

        <section class="content">
          <div class="left-content">
            <h1>Settings</h1>
            <div class="settings-container">
              <h3>Name: <%= user.name %></h3>
              <form id="nameForm">
                <div class="input-group">
                <input type="text" id="newName" name="newName" placeholder="New Name" class="settings-input">
                <input type="text" id="confirmName" name="confirmName" placeholder="Confirm Name" class="settings-input">
              </div>
                <button type="button" onclick="updateName(event)" class="settings-button">Change Name</button>
            </form>
            
            <h3>Email: <%= user.email %></h3>
            <form id="emailForm">
              <div class="input-group">
                <input type="email" id="newEmail" name="newEmail" placeholder="New Email" class="settings-input">
                <input type="email" id="confirmEmail" name="confirmEmail" placeholder="Confirm Email" class="settings-input">
              </div>
                <button type="button" onclick="updateEmail(event)" class="settings-button">Change Email</button>
            </form>
            
            <h3>Password</h3>
            <form id="change-password-form">
              <div class="input-group">
              <input type="password" id="current-password" name="current-password" required placeholder="Currrent Password" class="settings-input">

              <input type="password" id="new-password" name="new-password" required placeholder="New Password" class="settings-input">

              <input type="password" id="confirm-new-password" name="confirm-new-password" required placeholder="Confirm Password" class="settings-input">
            </div>
              <button type="submit" class="settings-button">Change Password</button>
            </form>
            </div>
            
            
            <div class="activities"></div>




 
            </div>
          </div>

          <div class="right-content">
            <div class="friends-activity">
              <h1>Announcements</h1>
              <div class="card-container">
                <div class="card">
                  <div class="card-user-info">
                    <img src="/images/mytutorpfp.png" alt="profile card" />
                    <h2>MyTutor</h2>
                  </div>

                  <p>Schedule your first tutoring session!</p>
                </div>

                <div class="card card-two">
                  <div class="card-user-info">
                    <img src="/images/mytutorpfp.png" alt="profile card" />
                    <h2>MyTutor</h2>
                  </div>
                  <img
                    class="card-img"
                    src="./images/mytutor.png"
                    alt="MyTutor"
                  />
                  <p>Welcome to MyTutor!</p>
                </div>
              </div>
            </div>
          </div>
        </section>
      </main>
    </body>
    <!-- partial -->
    <script src="./javascripts/settings.js"></script>
  </body>
</html>
